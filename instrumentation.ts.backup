export async function register() {
  // Only run instrumentation in Node.js runtime (not Edge)
  if (process.env.NEXT_RUNTIME === 'nodejs') {
    // Import Sentry server configuration
    await import('./sentry.server.config')
    
    // Add custom instrumentation here
    console.log('[Instrumentation] Server monitoring initialized')
    
    // Track application startup
    if (typeof performance !== 'undefined') {
      const startupTime = performance.now()
      console.log(`[Instrumentation] App startup took ${startupTime.toFixed(2)}ms`)
    }
    
    // Add database connection monitoring if needed
    if (process.env.NODE_ENV === 'production') {
      console.log('[Instrumentation] Production monitoring active')
    }
  }
}